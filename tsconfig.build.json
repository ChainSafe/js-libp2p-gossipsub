{
  "include": ["./ts"],
  "compilerOptions": {
    "outDir": "./src",
    "module": "commonjs",
    "lib": ["es2020", "dom"],
    "target": "es2020",

    "strict": true,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "useUnknownInCatchVariables": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "skipLibCheck": true,

    "esModuleInterop": true,
    "declaration": true,
    "types": ["node", "mocha"]
  }
}
